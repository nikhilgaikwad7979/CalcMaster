<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7E1E2"
    tools:context=".ui.SSYCalc.SSYCalcFragment"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="SSY Calculator"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editinvest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yearly Investment (INR)"
        android:backgroundTint="#000000"
        android:textSize="18sp"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:backgroundTint="#000000"
        android:textSize="18sp"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edityear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Year"
        android:backgroundTint="#000000"
        android:textSize="18sp"
        android:inputType="number"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textSize="30sp"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#59F6F6"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/totalinvest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Investment: "
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/totalinterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Interest: "
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/maturityyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maturity Year: "
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/maturityvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maturity Value: "
                android:textSize="20sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
